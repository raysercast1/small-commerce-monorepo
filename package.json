{
  "name": "my-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest",
    "test:partner": "vitest -c projects/partner-dashboard/vite.config.ts",
    "test:micro": "vitest -c projects/micro-storefront/vite.config.ts",
    "test:ui": "vitest --ui",
    "serve:ssr:partner-dashboard": "node dist/partner-dashboard/server/server.mjs",
    "serve:ssr:micro-storefront": "node dist/micro-storefront/server/server.mjs"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.0",
  "dependencies": {
    "@angular/cdk": "^20.0.3",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^21.0.0",
    "@angular/material": "^20.0.3",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/service-worker": "^20.0.0",
    "@angular/ssr": "^21.0.5",
    "express": "^5.1.0",
    "date-fns": "^4.1.0",
    "firebase": "^12.0.0",
    "jwt-decode": "^4.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^1.19.4",
    "@analogjs/vitest-angular": "^1.19.4",
    "@angular-devkit/build-angular": "^20.1.5",
    "@angular/animations": "^20.2.1",
    "@angular/build": "^21.0.5",
    "@angular/cli": "^21.0.5",
    "@angular/compiler-cli": "^21.0.0",
    "@angular/platform-browser-dynamic": "^20.0.5",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "20.0.2",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.0.0",
    "typescript": "~5.9.2",
    "vite": "^7.1.2",
    "vitest": "^4.0.8"
  }
}
